<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane onMouseMoved="#setGameText" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.titleScreen.recyclingHomeController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="980.0" onMouseMoved="#pointsText">
         <image>
            <Image url="@../Images/RecyclingHome.jpg" />
         </image>
      </ImageView>
      <StackPane fx:id="roadButton" layoutX="869.0" layoutY="550.0" onMouseClicked="#goRoad" onMouseEntered="#hover" onMouseExited="#hover" prefHeight="3.0" prefWidth="83.0">
         <children>
            <ImageView fitHeight="36.0" fitWidth="97.0">
               <image>
                  <Image url="@../Images/green_button00.png" />
               </image>
            </ImageView>
            <Label text="Road" textFill="#fff600">
               <font>
                  <Font name="Gill Sans Ultra Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </StackPane>
      <TextArea fx:id="gameText" layoutX="14.0" layoutY="486.0" prefHeight="100.0" prefWidth="255.0" text="Room details" />
      <Label fx:id="points" layoutX="14.0" layoutY="14.0" onMouseMoved="#pointsText">
         <font>
            <Font name="Gill Sans Ultra Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
