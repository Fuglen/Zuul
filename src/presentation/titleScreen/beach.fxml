<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.titleScreen.beachController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="980.0" onMouseMoved="#pointsText">
         <image>
            <Image url="@../Images/Beach.jpg" />
         </image>
      </ImageView>
      <StackPane fx:id="roadButton" layoutX="14.0" layoutY="549.0" onMouseClicked="#goRoad" onMouseEntered="#hover" onMouseExited="#hover" prefHeight="37.0" prefWidth="60.0">
         <children>
            <ImageView fitHeight="36.0" fitWidth="81.0">
               <image>
                  <Image url="@../Images/green_button00.png" />
               </image>
            </ImageView>
            <Label text="Road" textFill="#fff600">
               <font>
                  <Font name="Gill Sans Ultra Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </StackPane>
      <Label fx:id="points" layoutX="21.0" layoutY="14.0">
         <font>
            <Font name="Gill Sans Ultra Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
